<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gruppe4.menschaergerdichnicht.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type in your Player Name:"
        android:id="@+id/lblPlayerName"
        android:layout_above="@+id/txtPlayerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player1"
        android:ems="10"
        android:id="@+id/txtPlayerName"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lblPlayerName"
        android:layout_alignStart="@+id/lblPlayerName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/btnStartgame"
        android:layout_below="@+id/lblPlayerName"
        android:layout_alignLeft="@+id/txtPlayerName"
        android:layout_alignStart="@+id/txtPlayerName"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/txtPlayerName"
        android:layout_alignEnd="@+id/txtPlayerName"
        android:onClick="OnLogin" />
</RelativeLayout>
